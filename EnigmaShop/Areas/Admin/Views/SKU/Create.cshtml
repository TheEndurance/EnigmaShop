@model EnigmaShop.Areas.Admin.ViewModels.SKUFormViewModel
@{
    ViewData["Title"] = "Create SKU";
}
<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">SKUs</div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="ColourOptionGroupId"/>
                            <input type="hidden" asp-for="SizeOptionGroupId"/>
                            <div class="form-group row">
                                <label asp-for="ProductId" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <select asp-for="ProductId" class="form-control" asp-items="Model.ProductList"></select>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="Price" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="DiscountedPrice" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="DiscountedPrice" class="form-control" />
                                    <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>

                            <div class="form-group row">
                                <label class="form-control-label col-md-3">Availability and Discount</label>
                                <div class="col-md-9">
                                    <div class="i-checks">
                                        <input asp-for="IsDiscounted" class="checkbox-template" />
                                        <label asp-for="IsDiscounted"></label>
                                    </div>
                                    <div class="i-checks">
                                        <input asp-for="IsAvailable" class="checkbox-template" />
                                        <label asp-for="IsAvailable"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="Stock" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="Stock" class="form-control" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="ColourOptionId" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <select asp-for="ColourOptionId" class="form-control" asp-items="Model.ColourOptionsList"></select>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="SizeOptionId" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <select asp-for="SizeOptionId" class="form-control" asp-items="Model.SizeOptionsList"></select>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label asp-for="ImageUrl" class="form-control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="ImageUrl" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
