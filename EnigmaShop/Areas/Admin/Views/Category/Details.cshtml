                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Product Details</h3>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
