                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Order)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Order)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ParentCategoryId)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ParentCategoryId)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.RootCategoryId)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.RootCategoryId)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
