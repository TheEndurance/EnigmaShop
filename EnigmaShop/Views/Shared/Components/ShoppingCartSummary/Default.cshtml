@model EnigmaShop.ViewModels.ShoppingCartSummaryViewModel
@if (Model.ShoppingCartItems > 0)
{
    <li>
        <a class="shopping-cart-summary-link" asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i>
            <span class="ml-2">
                @Model.ShoppingCartItems
            </span>
        </a>
    </li>
}